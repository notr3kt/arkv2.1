## SOURCE: ark-resume-analysis.json
module_name: Resume Analysis & Candidate Matching
purpose: Analyze resumes against job requirements with evidence-based scoring
workflow:
  step_1_parse_resume:
    action: extract_structured_data
    sections:
      contact:
        - name
        - email
        - phone
        - location
        - linkedin
        - github
      experience:
        for_each_job:
          company: extract company name
          title: extract job title
          dates: extract start and end dates
          duration: calculate duration in months
          responsibilities: extract bullet points
          achievements: identify quantified results (metrics, percentages, dollar amounts)
          technologies: extract all mentioned tools, frameworks, platforms
      skills:
        technical: all technology mentions
        soft:
          - leadership
          - communication
          - teamwork
          - problem-solving
      education:
        - degree
        - institution
        - year
      certifications:
        - name
        - issuer
        - date
  step_2_timeline_validation:
    action: check_for_red_flags
    checks:
      -
        name: overlapping_jobs
        logic: If job_end_date > next_job_start_date
        flag: üö© Timeline overlap - working two jobs at once?
        severity: medium
      -
        name: employment_gaps
        logic: If gap_between_jobs > 6 months
        flag: ‚ö†Ô∏è Gap in employment (X months)
        severity: low
        note: Could be valid (education, sabbatical, caregiving) - just ask
      -
        name: rapid_job_hopping
        logic: If 3+ jobs with duration < 12 months each
        flag: ‚ö†Ô∏è Pattern of short tenures
        severity: medium
      -
        name: unclear_progression
        logic: If title goes from Senior back to Junior
        flag: ‚ÑπÔ∏è Unusual career progression
        severity: low
  step_3_match_to_jd:
    action: score_alignment
    method: evidence_based_scoring
    core_skills_match:
      for_each_core_skill:
        present: Check if mentioned anywhere in resume
        context: Check if used in actual project work (not just listed)
        proficiency: Assess level: Expert (architected, led) | Advanced (implemented, managed) | Basic (used, worked with)
        evidence: Quote the specific line from resume
        score: 1.0 if present with context, 0.5 if just listed, 0.0 if missing
      weight: 0.5
      max_points: 10
    secondary_skills_match:
      logic: Same as core but less critical
      weight: 0.3
      max_points: 10
    experience_match:
      check:
        years_total: Does total experience meet minimum?
        relevant_experience: How many years doing similar work?
        company_tier: Tier 1 (FAANG, Enterprise) vs Tier 2 (Mid-market) vs Tier 3 (Startup)
        role_progression: Junior ‚Üí Mid ‚Üí Senior progression evident?
      weight: 0.2
      max_points: 10
    achievement_quality:
      check:
        quantified_results: Count metrics like '30% faster', '$2M saved', 'managed team of 5'
        leadership_evidence: Led, managed, owned, architected
        problem_solving: Reduced, optimized, migrated, built from scratch
      bonus: +0.5 per strong quantified achievement (max +1.5)
      weight: 0.1
    total_score_calculation:
      formula: (core_match * 0.5) + (secondary_match * 0.3) + (experience_match * 0.2) + achievement_bonus
      range: 0.0 to 10.0
      thresholds:
        9.0_to_10.0: Strong Match - Fast track this candidate
        7.5_to_8.9: Good Match - Worth a phone screen
        6.0_to_7.4: Possible Match - Has gaps but potential
        below_6.0: Weak Match - Missing too many core skills
  step_4_forensic_checks:
    action: validate_authenticity
    quick_checks:
      -
        name: keyword_stuffing
        logic: If skill appears 10+ times without context
        flag: ‚ö†Ô∏è Possible keyword stuffing
      -
        name: generic_phrases
        logic: If >50% of bullets are vague ('helped', 'assisted', 'involved in')
        flag: ‚ö†Ô∏è Lacks specific achievements
      -
        name: version_mismatch
        logic: If technology version released after project end date
        flag: üö© Impossible tech version (React 18 used in 2020)
        severity: critical
      -
        name: all_buzzwords
        logic: If uses 'rockstar', 'ninja', 'guru', '10x engineer'
        flag: ‚ÑπÔ∏è Buzzword-heavy resume
  step_5_generate_outputs:
    recruiter_summary:
      format: Quick 3-4 sentence overview
      includes:
        - overall_score
        - top_3_strengths
        - top_2_gaps
        - recommendation
      example: Score: 8.5/10 - Strong match. ‚úÖ Has all core skills (AWS, Docker, Kubernetes) with 6 years relevant experience. ‚úÖ Led a team and architected infrastructure. ‚ö†Ô∏è Limited CI/CD pipeline experience. ‚ö†Ô∏è No certifications. Recommendation: PASS to phone screen.
    hiring_manager_brief:
      format: Detailed evidence-based narrative
      sections:
        - Match Overview (score + summary)
        - Core Skills Evidence (table: skill | has it? | proof from resume)
        - Experience Analysis (timeline, companies, progression)
        - Key Achievements (quantified wins)
        - Gaps & Concerns
        - Interview Questions (what to validate)
    comparison_table:
      when_to_use: When comparing multiple candidates for same role
      columns:
        - Candidate
        - Score
        - Core Skills
        - Experience
        - Strengths
        - Gaps
      max_candidates: 5
decision_logic:
  auto_recommend:
    PASS:
      criteria: score >= 8.0 AND no_critical_flags AND all_core_skills_present
      action: Move to phone screen
      message: Strong candidate. Recommend scheduling a call within 48 hours.
    MAYBE:
      criteria: score >= 6.0 AND score < 8.0 AND no_critical_flags
      action: Review and clarify
      message: Decent candidate but has gaps in [list gaps]. Consider if they're trainable or if you can flex requirements.
    HOLD:
      criteria: score >= 6.0 BUT critical_flags > 0
      action: Request clarification from candidate
      message: Has potential but needs clarification on [list flags]. Email candidate to explain [specific concerns].
    REJECT:
      criteria: score < 6.0 OR critical_flags > 2
      action: Polite rejection
      message: Not a match. Missing [X core skills]. Recommend looking for candidates with [what's needed].
output_customization:
  response_to_user:
    if_user_says_quick: Give only score + recommendation + top 2 strengths/gaps
    if_user_says_full: Generate complete hiring manager brief with evidence tables
    if_user_says_compare: Create comparison table for all uploaded resumes
    default: Give recruiter summary + ask if they want more details
examples:
  strong_evidence:
    - Led a team of 5 engineers to migrate 50+ microservices to Kubernetes, reducing deployment time by 40%
    - Architected and implemented a Terraform-based IaC framework, managing 200+ AWS resources across 3 environments
    - Reduced infrastructure costs by 30% ($2M annually) by optimizing EC2 instances and implementing auto-scaling
  weak_evidence:
    - Worked with cloud technologies
    - Assisted in various DevOps tasks
    - Familiar with Docker and Kubernetes
    - Team player with strong communication skills

## SOURCE: ark-jd-intelligence.json
module_name: JD Intelligence & Breakdown
purpose: Maxed-out job description analysis with layman's explanations
workflow:
  step_1_extract:
    action: parse_and_categorize
    output: skill_matrix
    categories:
      core_must_have:
        definition: Skills absolutely required for the job - deal breakers if missing
        signals:
          - required
          - must have
          - essential
          - mandatory
          - minimum
          - years of experience
        weight: 1.0
      secondary_nice_to_have:
        definition: Skills that add value but aren't mandatory
        signals:
          - nice to have
          - preferred
          - plus
          - bonus
          - desired
          - a plus
          - advantageous
        weight: 0.5
      tools_platforms:
        definition: Specific technologies, software, frameworks, cloud providers
        examples:
          - AWS
          - Docker
          - React
          - Salesforce
          - SAP
          - Kubernetes
        weight: 0.7
  step_2_explain_each_skill:
    action: decode_technical_terms
    for_each_skill:
      what_it_is: One-line plain English definition
      what_it_does: What problem it solves or what it's used for
      why_here: Why this job needs it (tied to job context)
      analogy: Real-world comparison if technical
      proficiency_level: Determine from context: Expert|Advanced|Working Knowledge
    example_output:
      skill: Kubernetes
      what_it_is: A tool that manages and organizes containers (think: shipping containers, but for software)
      what_it_does: Automatically deploys, scales, and keeps applications running smoothly across many servers
      why_here: This company runs their apps in containers, and needs someone to keep that system healthy
      analogy: Like an air traffic controller for software - makes sure everything lands, takes off, and runs on time
      proficiency: Advanced (based on 'architect' and 'manage production' in JD)
  step_3_validate_sanity:
    action: flag_red_flags
    checks:
      -
        name: impossible_experience
        logic: If years_required > technology_age
        example: Asking for 10 years of experience with React (released 2013)
        flag: üö© CRITICAL
      -
        name: contradictory_stack
        logic: If multiple competing technologies listed as all required
        example: Must know React AND Angular AND Vue
        flag: ‚ö†Ô∏è WARNING - Pick one or clarify
      -
        name: unrealistic_scope
        logic: If role_level + skill_count + experience_years don't align
        example: Junior role requiring 10 skills + 7 years + leadership
        flag: ‚ö†Ô∏è WARNING - Scope mismatch
      -
        name: buzzword_overload
        logic: If vague terms > 30% of requirements
        terms:
          - rockstar
          - ninja
          - guru
          - synergy
          - dynamic
          - fast-paced
        flag: ‚ö†Ô∏è WARNING - Lacks clarity
      -
        name: missing_context
        logic: If no team size, project type, or clear deliverables
        flag: ‚ÑπÔ∏è INFO - Need more details
  step_4_laymans_guide:
    action: explain_like_im_not_technical
    sections:
      job_in_plain_english:
        template: Think of this role as: [simple analogy]. This person will [main responsibility in everyday terms]. They'll work with [team/tools simplified] to [end result the company wants].
        example: Think of this role as: the architect and builder for the company's digital infrastructure. This person will design and maintain the 'backbone' that keeps all the company's software running smoothly. They'll work with cloud servers and automation tools to make sure the website and apps never go down.
      why_company_needs_this:
        template: The company needs this because [business problem]. Without this role, [what breaks or slows down]. This position helps [business outcome].
        example: The company needs this because they're growing fast and their old systems can't keep up. Without this role, the website crashes during busy times and new features take months to launch. This position helps them scale smoothly and ship updates faster.
      ideal_candidate_profile:
        sections:
          background: Where they likely worked before, what roles they held
          mindset: How they think and approach problems
          experience_range: Years of experience and career stage
          day_to_day: What their typical day looks like in this role
        example:
          background: Probably worked at a tech company or startup, maybe as a DevOps Engineer or Site Reliability Engineer. Likely came from a traditional IT background and learned cloud/automation on the job.
          mindset: They're problem-solvers who like to automate things. Prefer to build systems once properly rather than do manual work repeatedly. Think ahead about what could break.
          experience_range: 5-8 years total, with at least 2-3 years doing cloud infrastructure work. Not entry-level, but not necessarily a VP either.
          day_to_day: Half their time monitoring systems and responding to issues. Other half building new infrastructure, writing automation scripts, and improving processes.
      what_makes_good_fit:
        template: Red flags: [what to avoid]. Green flags: [what to look for]. Questions to ask: [how to validate fit].
        example:
          red_flags:
            - Only knows theory, no hands-on production experience
            - Switches jobs every 6 months (shows instability)
            - Can't explain what they built, only lists technologies
          green_flags:
            - Has 'battle scars' - can tell war stories about fixing broken systems
            - Shows progression from junior to senior roles
            - Mentions specific metrics (reduced downtime by X%, saved $Y)
          validation_questions:
            - Tell me about a time when a system you managed went down. What did you do?
            - Walk me through a complex infrastructure project you built from scratch.
            - What's your process for deciding between different technical solutions?
      recruiting_strategy:
        where_to_find: Target companies, job boards, communities where these candidates hang out
        how_to_reach: What messaging resonates with this type of candidate
        what_sells_them: What this candidate type cares about in a job
        example:
          where_to_find:
            - LinkedIn - search current DevOps Engineers at tech companies
            - GitHub - find contributors to infrastructure tools
            - Tech meetups and conferences (KubeCon, AWS re:Invent)
          how_to_reach: Skip the corporate fluff. Talk about technical challenges, scale, and autonomy. Mention specific tools in the stack.
          what_sells_them: Interesting technical problems, good work-life balance, learning opportunities, ownership and autonomy, compensation.
  step_5_generate_outputs:
    boolean_strings:
      count: 3
      types:
        - wide_net
        - focused
        - niche
      explanation: Search strings for LinkedIn and job boards - I'll explain how to use them
    interview_framework:
      technical_questions: 3 questions per core skill to validate depth
      behavioral_questions: 2 leadership, 2 problem-solving scenarios
      verification_questions: How to validate their claimed achievements
