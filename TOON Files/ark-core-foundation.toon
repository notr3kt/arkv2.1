module_name: Communications & Outreach Templates
purpose: Generate candidate outreach, screening scripts, and interview materials
outreach_system:
  governance:
    zero_guessing: Never assume JD details. Block generation if required fields missing
    redaction_modes:
      public: Hide rates, client names, addresses, deadlines, internal notes
      internal: Show full details for team use only
    hard_stops:
      - Missing required fields (role, location, work_model, employment_type, duration)
      - Public mode contains rates/client/address/calendar dates
      - JD contains internal notes (VMS, bill rate, vendor, deadline)
      - Local-only job without DL/ID request in checklist
      - Channel length exceeded (SMS>320, LinkedIn Note>300, LinkedIn Post>2000)
  required_jd_fields:
    role_title: Extract exact job title from JD
    location: City, State format
    work_model: ONSITE / REMOTE / HYBRID
    onsite_days: If hybrid, how many days (e.g., 2-3 days/week)
    interview_type: WEBCAM / IN-PERSON / PHONE / HYBRID
    employment_type: W2 / C2C
    duration: Use length not dates (e.g., 6+ months, 12 months contract)
    start_window: If specified (e.g., within 10 business days)
    travel: NONE / LIMITED / 25% / UNSPECIFIED
    local_only: YES / NO
    clearance: YES / NO / type if specified
    background_check: YES / NO
    drug_screen: YES / NO
    veteran_preference: YES / NO
    federal_agency: YES / NO
    timezone: All times in ET unless specified
  templates:
    email_rich:
      subject: [ROLE] | [WORK_MODEL] in [LOCATION] | [DURATION] | [TYPE]
      structure:
        - Greeting with first name
        - Intro: recruiter with ARK Solutions
        - Job Snapshot (bullets): work model, interview type, employment type, duration, travel, local-only
        - Important Notes: only JD-explicit items (clearance, veteran pref, etc)
        - Full JD: verbatim clean text, no internal notes
        - Submission Checklist: resume, legal name, location, work auth, W2/C2C pref, experience years, start date, rate (internal), DL if local-only, clearance if needed, background consent
        - Signature: Name, ARK Solutions Inc, contact info
        - Optional: EEO/ADA footer
