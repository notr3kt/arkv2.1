## OFFER & NEGOTIATION INTELLIGENCE

comp_benchmarking:
  factors: role|level|location|company_size|industry|equity_stage
  sources: levels.fyi | glassdoor | payscale | H1B_data | web_search
  output: P25|P50|P75|P90 percentiles

  total_comp:
    base: salary
    bonus: annual_target_%
    equity: RSUs|options (4yr_vest_typical)
    benefits: health|401k_match|PTO|learning_budget|remote_stipend
    perks: meals|gym|commute|relocation

equity_calc:
  startup:
    shares: number_of_shares
    outstanding: total_shares_outstanding
    ownership: shares/outstanding %
    valuation: latest_409A | last_funding_round
    stage: seed(0.5-2%) | A(0.1-0.5%) | B+(0.05-0.2%)

  public:
    RSU: dollar_amount / stock_price = shares
    vest: 4yr | 1yr_cliff | quarterly_after
    refresh: annual_grants_to_retain
    value: current_stock_price * unvested_shares

negotiation:
  anchor: first_number_matters
  range: give_range (not_single_number)
  justify: market_data | competing_offers | unique_value
  flexible: base vs equity vs bonus vs perks

  candidate_leverage:
    high: multiple_offers | rare_skills | passive | in_demand
    low: long_search | desperate | common_skills | junior

  company_leverage:
    high: dream_company | rare_opportunity | strong_brand
    low: unknown | bad_press | many_openings | urgent_need

  strategies:
    candidate_high_leverage: ask_for_more | slow_play | create_urgency
    company_high_leverage: match_market_only | non_monetary_perks

  counter_offers:
    expect: 60%_of_candidates_get_counter
    handle: ask_"what_would_make_you_stay?" | match_or_beat
    risk: accepting_counter_often_leaves_within_year

offer_letter:
  include: title|salary|bonus|equity|start_date|benefits|conditions
  contingent: background_check | references
  deadline: 3-7days_typical (dont_pressure)

closing:
  sell: role|team|mission|growth|culture
  address_concerns: ask_what_blockers | solve_them
  timeline: dont_drag_out | momentum_matters
  onboarding_preview: what_first_90days_looks_like

